<h2>Registrations for <%= event_name(@event_id) %></h2>

<table class="table">
  <thead>
    <tr>
      <th>Sca name</th>
      <th>Legal name</th>
      <th>Membership number</th>
      <th>Group name</th>
      <th>Feast option</th>
      <th>Camping Option</th>
      <th>Waiver</th>
    </tr>
  </thead>
  <tbody>
<%= for registration <- @registrations do %>
    <tr>
      <td><%= registration.sca_name %></td>
      <td><%= registration.legal_name %></td>
      <td><%= registration.membership_number %></td>
      <td><%= registration.group_name %></td>
      <%= if display_feast_option(@event_id) do %><td><%= registration.feast_option %></td><% end %>
      <%= if display_camping_option(@event_id) do %><td><%= registration.display_feast_option %></td><% end %>
      <td><%= registration.waiver %></td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Registration", to: registration_path(@conn, :new, event_id: @event_id) %></span> |
<span><%= link "Back", to: gate_goat_path(@conn, :index) %></span>
